# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=app
DB_PASS=app
DB_NAME=app
DB_SSLMODE=disable

# Application Configuration
APP_ENV=development

# JWT Authentication Configuration
# The issuer claim (iss) identifies the principal that issued the JWT
JWT_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX

# The audience claim (aud) identifies the recipients that the JWT is intended for
JWT_AUDIENCE=your-app-client-id

# JWKS URI for fetching public keys to validate JWT signatures
JWKS_URI=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX/.well-known/jwks.json

# For local development with mock tokens, you can use:
# JWT_ISSUER=http://localhost:4566
# JWT_AUDIENCE=mock-client-id
# JWKS_URI=http://localhost:4566/.well-known/jwks.json
